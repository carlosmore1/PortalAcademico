@model IEnumerable<PortalAcademico.Models.Curso>

@{
    ViewData["Title"] = "Panel del Coordinador";
}

<h2>Gestión de Cursos</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">+ Nuevo Curso</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Horario</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Codigo</td>
                <td>@c.Nombre</td>
                <td>@c.Creditos</td>
                <td>@($"{c.HorarioInicio:hh\\:mm} - {c.HorarioFin:hh\\:mm}")</td>
                <td>@(c.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                    <a asp-action="Desactivar" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">Desactivar</a>
                    <a asp-action="Matriculas" asp-route-id="@c.Id" class="btn btn-sm btn-outline-info">Matrículas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
