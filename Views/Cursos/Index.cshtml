@model IEnumerable<PortalAcademico.Models.Curso>

@{
    ViewData["Title"] = "Catálogo de Cursos";
}

<h2 class="mt-3">Catálogo de Cursos</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <input name="nombre" value="@Context.Request.Query["nombre"]" class="form-control" placeholder="Buscar por nombre..." />
    </div>
    <div class="col-md-2">
        <input type="number" name="creditosMin" value="@Context.Request.Query["nombre"]" class="form-control" placeholder="Créditos mín." />
    </div>
    <div class="col-md-2">
        <input type="number" name="creditosMax" value="@Context.Request.Query["nombre"]" class="form-control" placeholder="Créditos máx." />
    </div>
    <div class="col-md-2">
        <input type="time" name="horaInicio" value="@Context.Request.Query["nombre"]" class="form-control" placeholder="Desde" />
    </div>
    <div class="col-md-2">
        <input type="time" name="horaFin" value="@Context.Request.Query["nombre"]" class="form-control" placeholder="Hasta" />
    </div>
    <div class="col-md-1">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-warning">No se encontraron cursos con esos filtros.</div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Créditos</th>
                <th>Horario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Codigo</td>
                    <td>@c.Nombre</td>
                    <td>@c.Creditos</td>
                    <td>@($"{c.HorarioInicio:hh\\:mm} - {c.HorarioFin:hh\\:mm}")</td>
                    <td>
                        <a asp-action="Detalle" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">
                            Ver detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
